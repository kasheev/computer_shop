@model IEnumerable<BasaDate.Models.software>

@{
    ViewBag.Title = "ПО";
}

<h2>ПО</h2>

<p>
    @Html.ActionLink("Добавить записи", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <p>Операционная система</p>
        </th>
        <th>
            <p>Программы</p>
        </th>
        <th></th>
    </tr>

    @using (Html.BeginForm("Index", "softwares", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-10">
                <label for="query">
                    <input type="text" name="search" class="form-control" />
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Поиск" class="btn btn-default" />
            </div>
        </div>
    }

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.os)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.programs)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.id }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.id }) |
                @Html.ActionLink("Удаление", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
